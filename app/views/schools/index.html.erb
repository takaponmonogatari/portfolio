	<div class="container">
	<div>
		<h3>都道府県一覧</h3>
		<% @prefectures.each do |prefecture| %>
			<%= link_to prefecture.name, schools_path(prefecture_id: prefecture.id) %>
		<% end %>
			<%= link_to "すべての学校", schools_path %>
	</div>
	<div>
		<% if params[:prefecture_id] %>
			<h2><%= @prefecture.name %>の高校一覧 (全<%= @all_schools_count %>件)</h2>
		<% else %>
			<h2>高校一覧 (全<%= @all_schools_count %>件)</h2>
		<% end %>

		<% if @schools %>
			<table class="table">
				<thread>
				 <tr>
				  <th scope="col">学校名</th>
				  <th scope="col">部活動一覧</th>
				  <th scope="col">詳細ページ</th>
				 </tr>
				</thread>
				<% @schools.each do |school| %>
				 <tr>
					<td><%= school.name %></td>
					<td><%= school.club %></td>
					<td><%= link_to school_path(school) do %>
					   詳細<% end %>
					</td>
				 </tr>
				<% end %>
		 </table>
		<% else %>
			<h3>対応する高校はありませんでした。</h3>
		<% end %>
	</div>
	</div>
</section>
